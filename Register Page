    <script>
        function showAlert() {
            const username = document.getElementById('username').value;
            if (username.trim() === '') {
                alert('Please enter your username.');
                return false; 
            }
            alert('Registration Successful. Welcome, ' + username + '!');
            setTimeout(function() {
                window.location.href = 'home.html'; 
            }, 100);
            return false;
        }
    </script>
